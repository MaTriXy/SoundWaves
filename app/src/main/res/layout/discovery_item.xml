<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp">

    <org.bottiger.podcast.views.ImageViewTinted
        android:id="@+id/result_image"
        android:layout_width="@dimen/playlist_image_size_medium"
        android:layout_height="@dimen/playlist_image_size_medium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/result_subscribe_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/result_image"
        android:layout_alignBottom="@id/result_image"
        android:checked="false"/>


        <FrameLayout
            android:id="@+id/result_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/result_image"
            android:layout_toLeftOf="@id/result_subscribe_switch">

            <TextView
                android:id="@+id/result_title"
                android:hint="Podcats Title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="10dp"
                />

        </FrameLayout>

    <TextView
        android:id="@+id/result_description"
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/themeTextColorFaded"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/result_container"
        android:layout_alignLeft="@id/result_container"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/result_subscribe_switch"
        />

</RelativeLayout>