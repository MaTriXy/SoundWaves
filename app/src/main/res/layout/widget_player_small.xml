<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_player_small"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:paddingRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="16dp"
    android:visibility="gone"
    >

    <ImageView
        android:src="@drawable/soundwaves"
        android:layout_width="@dimen/widget_logo_size_small"
        android:layout_height="@dimen/widget_logo_size_small"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:scaleType="centerInside"
        android:id="@+id/widget_logo_small" />

    <ImageButton
        android:id="@+id/widget_play_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?android:attr/textColorPrimary"
        android:layout_toRightOf="@id/widget_logo_small"
        android:paddingTop="@dimen/widget_button_padding_top_bottom_small"
        android:paddingBottom="@dimen/widget_button_padding_top_bottom_small"
        android:paddingLeft="@dimen/widget_button_padding_left_right_small"
        android:paddingRight="@dimen/widget_button_padding_left_right_small"
        android:background="@null" />
    <!--
    android:srcCompat="@drawable/ic_play_arrow_widget"
    -->

    <ImageButton
        android:id="@+id/widget_skip_next_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="?android:attr/textColorPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="@dimen/widget_button_padding_top_bottom_small"
        android:paddingBottom="@dimen/widget_button_padding_top_bottom_small"
        android:paddingLeft="@dimen/widget_button_padding_left_right_small"
        android:paddingRight="@dimen/widget_button_padding_left_right_small"
        android:background="@null" />
    <!--
    android:srcCompat="@drawable/ic_skip_next_widget"
    -->

</RelativeLayout>