<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_player_small"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:paddingRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="16dp"
    android:visibility="gone">


    <ImageView
        android:src="@drawable/soundwaves"
        android:layout_width="@dimen/widget_logo_size"
        android:layout_height="@dimen/widget_logo_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="16dp"
        android:scaleType="centerInside"
        android:id="@+id/widget_logo_small" />

        <ImageButton
            android:src="@drawable/ic_play_arrow_black"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/widget_play_small"
            android:tint="?android:attr/textColorPrimary"
            android:layout_toRightOf="@id/widget_logo_small"
            android:padding="8dp"
            android:background="@null"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/widget_skip_next_small"
            android:tint="?android:attr/textColorPrimary"
            android:layout_toRightOf="@id/widget_play_small"
            android:background="@null"/>

</RelativeLayout>